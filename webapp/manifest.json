{
	"_version": "1.59.0",
	"sap.app": {
		"id": "brightstart.ips.ui5",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"sourceTemplate": {
			"id": "ui5template.basicSAPUI5ApplicationProject",
			"version": "1.0.0"
		},
		"dataSources": {
			"resourcesData": {
				"type": "JSON",
				"uri": "model/Resources.json"
			}
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},
	"sap.ui5": {
		"flexEnabled": false,
		"dependencies": {
			"minUI5Version": "1.120.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.uxap": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "brightstart.ips.ui5.i18n.i18n",
					"supportedLocales": ["en", "pt", ""],
					"fallbackLocale": ""
				}
			},
			"resources": {
				"type": "sap.ui.model.json.JSONModel",
				"dataSource": "resourcesData"
			}
		},
		"rootView": {
			"viewName": "brightstart.ips.ui5.view.App",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "brightstart.ips.ui5.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "disciplinaList",
					"target": "disciplinaList"
				},
				{
					"pattern": "disciplina/{disciplinaId}",
					"name": "recursoList",
					"target": "recursoList"
				},
				{
					"pattern": "disciplina/{disciplinaId}/recurso/{recursoId}",
					"name": "recursoDetail",
					"target": "recursoDetail"
				}
			],
			"targets": {
				"disciplinaList": {
					"viewName": "DisciplinaList",
					"viewId": "disciplinaList",
					"viewLevel": 1
				},
				"recursoList": {
					"viewName": "RecursoList",
					"viewId": "recursoList",
					"viewLevel": 2
				},
				"recursoDetail": {
					"viewName": "RecursoDetail",
					"viewId": "recursoDetail",
					"viewLevel": 3
				}
			}
		}
	}
}
