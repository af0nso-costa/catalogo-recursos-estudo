<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="aboutDialog"
        contentWidth="400px"
        resizable="false"
        draggable="true">
        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title text="{i18n>sobreTitle}"/>
                </contentMiddle>
                <contentRight>
                    <Button
                        icon="sap-icon://decline"
                        tooltip="{i18n>sobreFechar}"
                        press=".onCloseAboutDialog"
                        type="Transparent"
                        class="aboutCloseButton"/>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <VBox class="sapUiSmallMargin">
                <VBox class="sapUiTinyMarginBottom">
                    <Label text="{i18n>sobreNome}" design="Bold"/>
                    <Text text="{i18n>sobreNomeValor}"/>
                </VBox>
                <VBox class="sapUiTinyMarginBottom">
                    <Label text="{i18n>sobreUC}" design="Bold"/>
                    <Text text="{i18n>sobreUCValor}"/>
                </VBox>
                <VBox class="sapUiTinyMarginBottom">
                    <Label text="{i18n>sobreInstituicao}" design="Bold"/>
                    <Text text="{i18n>sobreInstituicaoValor}"/>
                </VBox>
                <VBox class="sapUiTinyMarginBottom">
                    <Label text="{i18n>sobreAno}" design="Bold"/>
                    <Text text="{i18n>sobreAnoValor}"/>
                </VBox>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>